<Window x:Class="FlottaNavale.WindowRotta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WindowRotta" Height="366.543" Width="563.91">
    <Grid Margin="0,0,0,-1">
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0">
            <Button Name="Annulla" Content="Annulla" Margin="20" Click="Annulla_Click"></Button>
            <Button Name="OK" Content="OK" Margin="20" Click="OK_Click"/>
        </StackPanel>
        <Grid Grid.Column="1" Name="paintSurface" MouseDown="paintSurface_MouseDown">
            <Image Name="imgMappa"></Image>
        </Grid>
    </Grid>
</Window>
