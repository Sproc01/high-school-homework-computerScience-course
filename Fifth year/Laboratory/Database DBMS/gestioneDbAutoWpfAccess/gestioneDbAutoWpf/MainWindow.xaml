<Window x:Class="gestioneDbAutoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gestioneDbAutoWpf"
        mc:Ignorable="d"
        Title="Auto Database" Height="450" Width="500">
    <StackPanel>
        <Menu>
            <MenuItem Name="btnOpen" Header="Open" Click="btnOpen_Click"/>
            <MenuItem Name="btnCheck" Header="Check" Click="btnCheck_Click"/>
            <MenuItem Name="btnShow" Header="Show" Click="btnShow_Click"/>
            <MenuItem Header="Modify">
                <MenuItem Name="btnInsert" Header="Insert" Click="btnInsert_Click"/>
                <MenuItem Name="btnDelete" Header="Delete" Click="btnDelete_Click"/>
            </MenuItem>
            <MenuItem Name="btnclose" Header="Close" Click="btnclose_Click"/>
            <MenuItem Name="btnExit" Header="Exit" Click="btnExit_Click"/>
        </Menu>
        <TextBox Background="AntiqueWhite" Name="textBox1" IsReadOnly="True" Height="400"/>
    </StackPanel>
</Window>
