<Window x:Class="stackPanelDinamico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:stackPanelDinamico"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ScrollViewer>
            <StackPanel Background="Cyan" Grid.Column="0" Grid.Row="0" Name="stk1"/>
        </ScrollViewer>
        <StackPanel Name="stk2" Grid.Column="1" Grid.Row="0">
            <Button x:Name="btn1" Content="Inserisci" Click="btn1_Click"/>
        </StackPanel>
    </Grid>
</Window>
