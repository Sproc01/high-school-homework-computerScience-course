<Window x:Class="esStackPanelScuola.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:esStackPanelScuola"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="txb1" Text="Nome" Margin="8"/>
            <TextBox Name="txtnome" Width="120" Margin="8" Background="Gray"/>
            <TextBlock Name="txb2" Text="Cognome" Margin="8"/>
            <TextBox Name="txtcognome" Width="120" Margin="8"  Background="Gray"/>
            <Button Name="btnsaluta" Content="Saluta" Margin="8" Click="btnsaluta_Click"></Button>
        </StackPanel>
        <WrapPanel Orientation="Horizontal" Margin="8" Background="LightBlue">
            <TextBlock Name="txtsaluto" Text="Messaggio:"/>
        </WrapPanel>
    </StackPanel>
</Window>
